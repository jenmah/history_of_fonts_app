  <link href='http://fonts.googleapis.com/css?family=Abril+Fatface' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="wrapper">
  <div id="navigation-container">
    <header>
      <nav>
        <div id="nav-left">
          <li><%= link_to("FONT FINDER", root_path) %></li>
        </div>

        <div id="nav-right">

    <form class="font_search" id="font_search" action="/search" accept-charset="UTF-8" method="get">
      <input type="search" name="q[font_name]" id="q_font_name" />
      <input type="submit" name="commit" value="Search" />
    </form>
        </div>
      </nav>
    </header>
  </div>
  <div id="dynamic-area">
    <%= yield %>
  </div>
  
<a href="#top">go back to top</a>

  <div class="push"></div>
  </div>



